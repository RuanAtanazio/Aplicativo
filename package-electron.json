{
  "name": "optmetrics-compras",
  "version": "1.0.0",
  "description": "Sistema de Gerenciamento de Pedidos de Compra - OptMetrics",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "compras",
    "pedidos",
    "fornecedores",
    "gest√£o",
    "optmetrics"
  ],
  "author": "OptMetrics",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.optmetrics.compras",
    "productName": "OptMetrics Compras",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git",
      "!debug.html",
      "!teste.html",
      "!README*.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "OptMetrics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OptMetrics Compras"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.${ext}"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RuanAtanazio/Aplicativo"
  }
}
